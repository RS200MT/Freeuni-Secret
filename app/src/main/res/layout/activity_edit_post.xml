<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">
    <EditText
        android:id="@+id/edit_post_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/edit_post_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/post_image_size"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/edit_post_add_image"
        android:layout_width="@dimen/image_btn_size"
        android:layout_height="@dimen/image_btn_size"
        android:src="@drawable/ic_add_a_photo_black_24dp"
        />
    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_button_text"
        android:layout_marginTop="@dimen/margin"/>

</LinearLayout>